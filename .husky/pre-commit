#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Checking TypeScript compilation..."
npm run lint

# Run ESLint
echo "🧹 Running ESLint..."
npm run lint:eslint

# Run Prettier format check
echo "💅 Checking code formatting..."
npm run format:check

# Run tests
echo "🧪 Running tests..."
npm run test

echo "✅ All pre-commit checks passed!"
