    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
