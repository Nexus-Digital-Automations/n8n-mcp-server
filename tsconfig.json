{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022", 
      "moduleResolution": "node",
      "lib": ["ES2022", "DOM"],
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "build", "dist"]
  }